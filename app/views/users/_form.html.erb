<div class="ui middle aligned center aligned grid">
  <div class="eight wide column">
    <%= form_with(model: @user, class: "ui form", local: true) do |f| %>
      <div class="ui segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.text_field :username, placeholder: "Enter a username" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
          </div>
        </div>
        <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "ui fluid teal submit button") %>
      </div>
    <% end %>
  </div>
</div>